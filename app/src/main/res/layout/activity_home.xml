<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">

    <include layout="@layout/activity_navigation"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFEF1"
        tools:context=".MainActivity">

        <View
            android:id="@+id/divider7"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="80dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#6C5F35"
            android:foregroundTint="#6C5F35"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D5D5D5">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1sp"
                        android:background="#FFFFFF"
                        android:padding="15sp">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="65sp"
                            android:layout_height="65sp"
                            android:padding="15sp"
                            app:srcCompat="@drawable/word_of_the_day_image"
                            app:tint="#FF0000" />

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="65sp"
                            android:padding="20sp"
                            android:text="@string/home_word_of_the_day"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/category_study_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1sp"
                        android:background="#FFFFFF"
                        android:padding="15sp">

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="65sp"
                            android:layout_height="65sp"
                            android:padding="15sp"
                            app:srcCompat="@drawable/category_image"
                            app:tint="#FF9800" />

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="65sp"
                            android:padding="20sp"
                            android:text="@string/home_category"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1sp"
                        android:background="#FFFFFF"
                        android:padding="15sp">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="65sp"
                            android:layout_height="65sp"
                            android:padding="15sp"
                            app:srcCompat="@drawable/my_vocabulary_image"
                            app:tint="#FFEB3B" />

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"
                            android:layout_height="65sp"
                            android:padding="20sp"
                            android:text="@string/home_my_vocabulary"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1sp"
                        android:background="#FFFFFF"
                        android:padding="15sp">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="65sp"
                            android:layout_height="65sp"
                            android:padding="15sp"
                            app:srcCompat="@drawable/card_holder_image"
                            app:tint="#8BC34A" />

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="wrap_content"
                            android:layout_height="65sp"
                            android:padding="20sp"
                            android:text="@string/home_card_holder"
                            android:textSize="20sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1sp"
                        android:background="#FFFFFF"
                        android:padding="15sp">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="65sp"
                            android:layout_height="65sp"
                            android:padding="15sp"
                            app:srcCompat="@drawable/game_image"
                            app:tint="#2196F3" />

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="wrap_content"
                            android:layout_height="65sp"
                            android:padding="20sp"
                            android:text="@string/home_game"
                            android:textSize="20sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1sp"
                        android:background="#FFFFFF"
                        android:padding="15sp">

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="65sp"
                            android:layout_height="65sp"
                            android:padding="15sp"
                            app:srcCompat="@drawable/introduction_and_daily_life_image"
                            app:tint="#673AB7" />

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="wrap_content"
                            android:layout_height="65sp"
                            android:padding="20sp"
                            android:text="@string/home_introduction"
                            android:textSize="20sp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginBottom="80dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#6C5F35"
            android:foregroundTint="#6C5F35"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <fragment
                android:id="@+id/home_bottom_fragment"
                android:name="com.example.bamsaemkorean.BottomFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout="@layout/fragment_bottom" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/divider7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <fragment
                android:id="@+id/home_top_fragment"
                android:name="com.example.bamsaemkorean.TopFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout="@layout/fragment_top" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>